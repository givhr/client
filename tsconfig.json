{
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*-test.ts", "./src/**/*-test.tsx", "node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true
  }
}